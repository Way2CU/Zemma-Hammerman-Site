<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="project_menu_videos"/>
				<cms:raw text="  "/>
				<cms:module
					name="shop"
					action="show_item"
					uid="$_REQUEST['name']"
					template="parts/page_title.xml"
					cms:eval="uid"
				/>
			</title>

			<cms:collection  include="page_control"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="video">

			<!--  Shop item module call for project_header.xml -->
 			<cms:module
				name="shop"
				action="show_item"
				uid="$_REQUEST['name']"
				template="parts/project_header.xml"
				cms:eval="uid"
				/>

			<!--  Shop item module to call videos -->
			<section>
	 			<cms:module
					name="shop"
					action="show_item"
					uid="$_REQUEST['name']"
					template="parts/project_video_list.xml"
					cms:eval="uid"
					/>
			</section>

			<!-- Project nav menu -->
			<cms:template file="parts/project_footer_nav.xml"/>

			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>