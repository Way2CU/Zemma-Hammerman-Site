<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection  include="page_control"/>
			<cms:script src="_BASEURL.'/site/scripts/nobe_rotate.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$section" cms:eval="class">
			<!-- Top section of the site -->
			<cms:template file="parts/header.xml"/>

			<div class="slider">
				<cms:module
					name="shop"
					action="show_item_list"
					order_by="priority"
					group="slider_images"
					template="parts/slider_images.xml"
					/>
			</div>

			<section>
				<h2><cms:text constant="home_page_title"/></h2>
				<div id="controls">
					<div class="knob"></div>
				</div>

			</section>
		</body>
	</html>
</document>
