			<cms:mobile>
				<!-- Top section of the site -->
				<cms:template file="parts/header.xml"/>

				<div class="slider">
					<!-- Manual about zema hamerman image -->
					<img
						class="image"
						data-name="home_page_title"
						data-url="about_us_link"
						src="_BASEURL.'/site/images/hamerman-logo-small.jpg'"
						alt="menu_about"
						cms:constant="data-name,alt,data-url"
						cms:eval="src"
						/>
					<input type="hidden" value="home_page_title" cms:constant="value"/>

					<cms:module
						name="shop"
						action="show_item_list"
						category="private"
						order_by="priority"
						template="parts/slider_images.xml"
						/>

					<a class="open_project action"><cms:text constant="button_open_project"/></a>
				</div>

				<section>
					<!-- Project title container -->
					<h1></h1>

					<!-- Project selection controls -->
					<div id="controls">
						<div class="knob"/>
					</div>
				</section>

				<cms:template file="parts/footer.xml"/>
			</cms:mobile>

			<cms:desktop>
				<div id="screen">
					<!-- Top section of the site -->
					<cms:template file="parts/header.xml"/>
					<div id="content">

						<div class="slider">
							<!-- Manual about zema hamerman image -->
							<img
								class="image"
								data-name="home_page_title"
								data-url="about_us_link"
								src="_BASEURL.'/site/images/hamerman-logo-small.jpg'"
								alt="menu_about"
								cms:constant="data-name,alt,data-url"
								cms:eval="src"
								/>
							<input type="hidden" value="home_page_title" cms:constant="value"/>

							<cms:module
								name="shop"
								action="show_item_list"
								category="private"
								order_by="priority"
								template="parts/slider_images.xml"
								/>

							<a class="open_project action"><cms:text constant="button_open_project"/></a>
						</div>

						<section>
							<h1></h1>
							<a class="show_project action" href="#">
								<cms:text constant="button_show_project"/>
							</a>

							<div id="controls">
								<div class="knob">
								</div>
							</div>
						</section>
						<!-- Footer -->
						<cms:template file="parts/footer.xml"/>
					</div>
				</div>
			</cms:desktop>
