<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection  include="page_control"/>
			<cms:script src="_BASEURL.'/site/scripts/knob_rotate.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="home">
			<!-- Top section of the site -->
			<cms:template file="parts/header.xml"/>

			<div class="slider">
				<!-- Manual about zema hamerman image -->
				<img
					class="image"
					data-name="home_page_title"
					data-url="about_us_link"
					src="_BASEURL.'/site/images/hamerman-logo-small.jpg'"
					alt="menu_about"
					cms:constant="data-name,alt,data-url"
					cms:eval="src"
					/>

				<cms:module
					name="shop"
					action="show_item_list"
					order_by="priority"
					template="parts/slider_images.xml"
					/>

<!-- 				<a class="show_project action" href="#">
					<cms:text constant="button_show_project"/>
				</a> -->
			</div>

			<section>
				<a class="show_project action" href="#">
					<cms:text constant="button_show_project"/>
				</a>

				<div id="controls">
					<div class="knob">
					</div>
				</div>
			</section>

			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>