<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="project_menu_about"/>
				<cms:raw text="  "/>
				<cms:module
					name="shop"
					action="show_item"
					uid="$_REQUEST['name']"
					template="parts/page_title.xml"
					cms:eval="uid"
					/>
			</title>
			<!-- Page description -->
			<cms:module
				name="shop"
				action="show_item"
				uid="$_REQUEST['name']"
				template="parts/page_description.xml"
				cms:eval="uid"
				/>
			<cms:collection  include="page_control"/>
			<cms:collection include="page_control,mobile_menu"/>
			<cms:script src="_BASEURL.'/site/scripts/expand.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
			<cms:raw file="parts/ga.txt"/>
		</head>

		<body class="about">
			<cms:mobile>
				<!--  Shop item module call for project_header.xml -->
				<cms:module
					name="shop"
					action="show_item"
					uid="$_REQUEST['name']"
					template="parts/project_header.xml"
					cms:eval="uid"
					/>

				<!--  about article -->
				<cms:module
					name="shop"
					action="show_item"
					uid="$_REQUEST['name']"
					template="parts/information.xml"
					cms:eval="uid"
					/>

				<!-- Project nav menu -->
				<cms:template file="parts/project_footer_nav.xml"/>

				<!-- Footer -->
				<cms:template file="parts/footer.xml"/>
			</cms:mobile>

			<cms:desktop>
				<div id="screen">
					<!--  Shop item module call for project_header.xml -->
					<cms:module
						name="shop"
						action="show_item"
						uid="$_REQUEST['name']"
						template="parts/project_header.xml"
						cms:eval="uid"
						/>
					<div id="content">

						<!--  about article -->
						<cms:module
							name="shop"
							action="show_item"
							uid="$_REQUEST['name']"
							template="parts/information.xml"
							cms:eval="uid"
							/>

						<!-- Project nav menu -->
						<cms:template file="parts/project_footer_nav.xml"/>

						<!-- Footer -->
						<cms:template file="parts/footer.xml"/>
					</div>
				</div>
			</cms:desktop>
		</body>
	</html>
</document>
