<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="project_menu_gallery"/>
				<cms:raw text="  "/>
				<cms:module
					name="shop"
					action="show_item"
					uid="$_REQUEST['name']"
					template="parts/page_title.xml"
					cms:eval="uid"
				/>
			</title>

			<cms:collection  include="animation_chain,page_control"/>
			<cms:collection include="page_control,mobile_menu,jquery_event_drag,jquery_event_scroll,scrollbar"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="gallery">
			<cms:mobile>
				<!--  Shop item module call for project_header.xml -->
	 			<cms:module
					name="shop"
					action="show_item"
					uid="$_REQUEST['name']"
					template="parts/project_header.xml"
					cms:eval="uid"
				/>

				<!--  Call for shop_item module -->
				<section>
					<cms:module
						name="shop"
						action="show_item"
						uid="$_REQUEST['name']"
						template="parts/gallery_module_template.xml"
						cms:eval="uid"
					/>
				</section>
				<!-- Project nav menu -->
				<cms:template file="parts/project_footer_nav.xml"/>
				<!-- Footer -->
				<cms:template file="parts/footer.xml"/>
			</cms:mobile>

			<cms:desktop>
				<div id="screen">
					<!--  Shop item module call for project_header.xml -->
		 			<cms:module
						name="shop"
						action="show_item"
						uid="$_REQUEST['name']"
						template="parts/project_header.xml"
						cms:eval="uid"
					/>
					<div id="content">

						<!--  Call for shop_item module -->
						<section>
							<cms:module
								name="shop"
								action="show_item"
								uid="$_REQUEST['name']"
								template="parts/gallery_module_template.xml"
								cms:eval="uid"
							/>
						</section>
						<!-- Project nav menu -->
						<cms:template file="parts/project_footer_nav.xml"/>
						<!-- Footer -->
						<cms:template file="parts/footer.xml"/>
					</div>
				</div>
			</cms:desktop>
		</body>
	</html>
</document>