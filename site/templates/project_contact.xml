<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="project_menu_contact"/>
				<cms:raw text="  "/>
				<cms:module
					name="shop"
					action="show_item"
					uid="$_REQUEST['name']"
					template="parts/page_title.xml"
					cms:eval="uid"
					/>
			</title>

			<cms:collection  include="page_control"/>
			<cms:collection include="page_control,mobile_menu,jquery_event_drag,jquery_event_scroll,scrollbar"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="contact project">
			<cms:mobile>
				<!--  Shop item module call for project_header.xml -->
				<cms:module
					name="shop"
					action="show_item"
					uid="$_REQUEST['name']"
					template="parts/project_header.xml"
					cms:eval="uid"
					/>

				<section>
					<!-- Shop module call for thumbnail group image -->
					<cms:module
						name="shop"
						action="show_item"
						uid="$_REQUEST['name']"
						template="parts/project_image.xml"
						cms:eval="uid"
						/>

					<!--  Constants and svg phone link  -->
					<h4><cms:text constant="call_us_today" /></h4>
					<a
						href="'tel:'.urlencode(Language::get_Text('phone3'))"
						cms:eval="href"
						class="phone action"
						>
						<cms:text constant="phone1" />
						<cms:svg file="site-sprite.svg" symbol="phone"/>
					</a>
					<div class="form_container">
						<h5><cms:text constant="form_text" /></h5>

						<!-- Show contact form -->
						<cms:module
							name="shop"
							action="show_property"
							template="parts/project_form.xml"
							item_uid="$_REQUEST['name']"
							text_id="project"
							cms:eval="item_uid"
							/>
					</div>
				</section>

				<!-- Project nav menu -->
				<cms:template file="parts/project_footer_nav.xml"/>

				<!-- Footer -->
				<cms:template file="parts/footer.xml"/>
			</cms:mobile>

			<cms:desktop>
				<div id="screen">
					<div id="content">
						<!--  Shop item module call for project_header.xml -->
						<cms:module
							name="shop"
							action="show_item"
							uid="$_REQUEST['name']"
							template="parts/project_header.xml"
							cms:eval="uid"
							/>

						<section>
							<!-- Shop module call for thumbnail group image -->
							<cms:module
								name="shop"
								action="show_item"
								uid="$_REQUEST['name']"
								template="parts/project_image.xml"
								cms:eval="uid"
								/>

							<!--  Constants and svg phone link  -->
							<h4><cms:text constant="call_us_today" /></h4>
							<a
								href="'tel:'.urlencode(Language::get_Text('phone3'))"
								cms:eval="href"
								class="phone action"
								>
								<cms:text constant="phone1" />
								<cms:svg file="site-sprite.svg" symbol="phone"/>
							</a>
							<div class="form_container">
								<h5><cms:text constant="form_text" /></h5>

								<!-- Show contact form -->
								<cms:module
									name="shop"
									action="show_property"
									template="parts/project_form.xml"
									item_uid="$_REQUEST['name']"
									text_id="project"
									cms:eval="item_uid"
									/>
							</div>
						</section>

						<!-- Project nav menu -->
						<cms:template file="parts/project_footer_nav.xml"/>

						<!-- Footer -->
						<cms:template file="parts/footer.xml"/>
					</div>
				</div>
			</cms:desktop>
		</body>
	</html>
</document>
